<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.Registro_Solicitudes">

    <!-- Botón regresar -->
    <ImageView
        android:id="@+id/btnRegresa"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/flecha"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nueva solicitud"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp" />

    <!-- Línea inferior del título -->
    <View
        android:id="@+id/rayita"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Label: ¿Qué necesitas? -->
    <TextView
        android:id="@+id/lblNecesitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Qué necesitas?"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/rayita"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp" />

    <!-- Input: ¿Qué necesitas? -->
    <EditText
        android:id="@+id/etNecesitas"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="Escribe aquí..."
        android:inputType="text"
        android:background="@drawable/bg_edittext"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/lblNecesitas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Label: Ubicación -->
    <TextView
        android:id="@+id/lblUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicación"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etNecesitas"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp" />

    <!-- Input: Ubicación -->
    <EditText
        android:id="@+id/etUbicacion"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:hint="¿Dónde necesitas ayuda?"
        android:inputType="text"
        android:background="@drawable/bg_edittext"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/lblUbicacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Label: Descripción -->
    <TextView
        android:id="@+id/lblDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción (opcional)"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etUbicacion"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp" />

    <!-- Input: Descripción -->
    <EditText
        android:id="@+id/etDescripcion"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:hint="Agrega detalles adicionales..."
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:background="@drawable/bg_edittext"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/lblDescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Botón Publicar -->
    <Button
        android:id="@+id/btnPublicar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Publicar"
        android:textColor="@android:color/white"
        android:backgroundTint="#000000"
        app:layout_constraintTop_toBottomOf="@id/etDescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>