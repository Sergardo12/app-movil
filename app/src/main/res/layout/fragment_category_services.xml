<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".ui.fragment.CategoryServicesFragment">

    <LinearLayout
        android:id="@+id/category_buttons_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnCarpinteria"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/bg_carpinteria"
                android:background="@android:color/transparent"
                android:contentDescription="Carpintería" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carpintería"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

</HorizontalScrollView>